<h3>Enroll New Student</h3>

<div class="card">
  <div class="card-body">
    <!-- Changed to multipart/form-data and field names to match route -->
    <form action="/enroll" method="POST" enctype="multipart/form-data">
      <div class="mb-3">
        <label class="form-label">Student ID (Roll No)</label>
        <input type="text" class="form-control" name="rollno" required />
      </div>

      <div class="mb-3">
        <label class="form-label">Full Name</label>
        <input type="text" class="form-control" name="name" required />
      </div>

      <div class="mb-3">
        <label class="form-label">Email</label>
        <input type="email" class="form-control" name="email" />
      </div>

      <!-- Changed input name to "photos" and added multiple attribute -->
      <div class="mb-3">
        <label class="form-label">Upload Face Images (Multiple allowed)</label>
        <input type="file" class="form-control" name="photos" accept="image/*" multiple required />
      </div>

      <button type="submit" class="btn btn-primary">Enroll Student</button>
    </form>
  </div>
</div>